/*** ESSENTIAL STYLES ***/
#dropdown-menu {
	background: url(/images/superfish/sf-menu-bg.png) repeat-x top left;
}
ul.sf-menu {
	clear: both;
	width: 100%;
	height: 54px;
    background: url("/images/superfish/sf-menu-bg.png") repeat-x left top #8B9AA3;
    position: relative;
}

.sf-menu, .sf-menu * {
	margin: 0;
	padding: 0;
	list-style: none;
}

.sf-menu > li {
    /*background: url("/images/superfish/li-menu-bg.png") no-repeat scroll left top #8B9AA3;*/
    float: left;
    height: 53px;
    margin: 0;
    width: 121px;
    border-left: 1px solid #9d9d9d;
}
.sf-menu > li.sfHover {
    height: 54px;
}


/* Last menu item */
.sf-menu > li.last {
    /*background: url("/images/superfish/li-menu-bg-last.png") no-repeat scroll left top #8B9AA3;*/
    border-right: 1px solid #9d9d9d;
}

.sf-menu ul {
	position: absolute;
	display: none;
	top: 100%;
	left: 0;
	z-index: 99;
}
.sf-menu > li {
	float: left;
}
.sf-menu li:hover > ul,
.sf-menu li.sfHover > ul {
	display: block;
}

.sf-menu a {
	display: block;
	position: relative;
}
.sf-menu ul ul {
	top: 0;
	left: 100%;
}


/*** DEMO SKIN ***/

.sf-menu ul {
	box-shadow: 2px 2px 6px rgba(0,0,0,.2);
	min-width: 12em; /* allow long menu items to determine submenu width */
}

.sf-menu a {
    color: #FFFFFF !important;
    font-family: "myriad-pro-1","myriad-pro-2",sans-serif;
    font-size: 13px;
    line-height: 18px;
    padding: 9px 8px 15px 8px;
	text-decoration: none;
}
.sf-menu > li > a {
    text-transform: uppercase;	
}

.sf-menu li {
	-webkit-transition: background .2s;
	transition: background .2s;
}
.sf-menu ul li {
	background: #AABDE6;
}
.sf-menu ul ul li {
	background: #9AAEDB;
}

/*** arrows **/
.sf-menu a.sf-with-ul {
	padding-right: 2.25em;
	min-width: 1px; /* trigger IE7 hasLayout so spans position accurately */
}
.sf-sub-indicator {
	position: absolute;
	display: block;
	right: .75em;
	top: .9em;
	width: 10px;
	height: 10px;
	text-indent: -999em;
	overflow: hidden;
}

li:hover > a .sf-sub-indicator,
li.sfHover > a .sf-sub-indicator {
	background-position: -10px -100px;
}

/* point right for anchors in subs */
.sf-menu ul .sf-sub-indicator {
	background-position: 0 0;
}
.sf-menu ul li:hover > a .sf-sub-indicator,
.sf-menu ul li.sfHover > a .sf-sub-indicator {
	background-position: -10px 0;
}

/* --- MEGA MENU --- */

/* Main background of mega menu */
ul.sf-megamenu {
    /*background: url("/images/superfish/main_nav_bg.gif") repeat-y scroll left top transparent;*/
    background-color: #3F4F59;
    box-shadow: 3px 3px 4px #BABABA;
    width: 965px;
    border: 1px solid #9d9d9d;
    border-top: 0;
}


ul.sf-megamenu li {
    background: none repeat scroll 0 0 transparent;
    border: 0 none;
    color: #FFFFFF;
    height: 100%;
    width: 100%;
}

/* Hover link */
ul.sf-megamenu a:hover, ul.sf-megamenu li ol li.right-col a:hover {
	text-decoration: underline;
	color: #FF9400;
}

/* Header for left and right columns */
.sf-megamenu-column a.header, li.right-col a.header {
    border-bottom: 1px solid #666666;
    color: #EBEBEB;
    font-family: Arial,sans-serif;
    font-size: 14px;
    font-weight: bold;
    padding: 0 0 4px !important;
}

/* Right column header doesn't have bottom border */
li.right-col a.header {
	border: none;
}

/* Margin (looks like padding) above the top part of the menu */
ul.sf-megamenu li ol {
	margin-top: 20px;
}

/* Reduces the 20px previously set so there is less of a gap between header and menu items in megemenu */
.sf-megamenu-column ol {
	margin-top: 5px !important;
}

/* Float left menu and make it mulitple columns by setting it as inline */
ul.sf-megamenu li ol li {
	margin-left: 15px;
	width: 175px;
	float: left;
	position: relative;
	display: inline;	
}

/* The actual menu item links including the little backound dot */
.sf-megamenu-column ol li a {
    background: url("/images/superfish/dot.png") no-repeat scroll 5px 11px transparent;
    color: #ACC3CF;
    display: block;
    float: none;
    font-family: Arial,sans-serif;
    font-size: 12px;
    height: auto;
    padding: 5px 0 5px 10px;
    text-indent: 0;
    text-transform: none;
}

/* The actual menu items have no left margin */
ul.sf-megamenu li > div > ol > li {
	margin-left: 0;
}

/* Width of left column. Subject to change based on overall side of mega menu */
ul.sf-megamenu li ol li.left-col {
	width: 505px;
}

/* Width of right column */
ul.sf-megamenu li ol li.right-col {
    float: right;
    height: 175px;
    width: 175px;
}

/* Making the right column image a proper size */
ul.sf-megamenu li ol li.right-col a {
	display: block;
	float: none;
    height: 175px;	
	margin-left: 20px;
}

/* Background of right column image.*/
ul.sf-megamenu li ol li.right-col a.play-icon {
    background: url("/images/superfish/play-icon.png") no-repeat scroll 0 50px transparent;
}




