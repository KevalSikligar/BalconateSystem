body {
    font-family: 'lucida grande',tahoma,verdana,arial,sans-serif;
    font-size: 12px;
    color: #333;   
}

a {
    text-decoration: none;
    color: #3c5ad9;
}

a:hover {
    text-decoration: underline;
}

.pad10 {
    padding: 10px;
}

p
{
    margin-top: 5px;
    margin-bottom: 10px;
}


h1 {
    font-size: 18px;
    font-weight: bold;
    margin: 10px 0;
}

#wrapper {
    padding: 10px;
}

.indextable {
    width: 100%;
}

.indextable th {
    border: 1px solid black;
    font-weight: bold;
    text-align: center;
    padding: 5px;
}

.indextable td {
    border: 1px solid black;
    padding: 5px;
}

.indextable tr.alt td {
    background-color: #EAF2D3;
}

.upload-button {
    

}

span.field-validation-error {
    display: block;
}














.galimg {
    border-top: 1px solid rgb(123, 123, 123);
    padding: 5px;
    float: left;
    float: left;

}

.galimg input.name {
    min-width: 300px;
    float: left;
    clear: both;
    margin-top: 5px;
}

.galimg input.desc {
    min-width: 300px;
    float: left;
    clear: both;
    margin-top: 5px;
}

.galimg .inxcont {
    float: left;
    clear: both;
    margin-top: 5px;
    width: 90px;
}
.galimg .inxcont .inx {
    width: 97%;
}
.galimg .tags {
    float: left;
    clear: both;
    margin-top: 5px;
}

.galimg img {
    float: left;
}
.galimg  a.orglnk {
    vertical-align: middle;
    margin-left: 5px;
}
.galimg .frm {
    float: left;
    margin-left: 10px;
}

.galimg a.btn {
    cursor: pointer;
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-left: 5px;
    float: left;
}

.galimg a.cw {
    background-image: url(/content/images/rotate_cw.png);
}

.galimg a.acw {
    background-image: url(/content/images/rotate_acw.png);
}

.galimg a.del {
    background-image: url(/content/images/delete.png);
}

.galimg a.copy {
    background-image: url(/content/images/copy.png);
}
